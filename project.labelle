.{
    .version = 1,
    .name = "bakery-game",
    .description = "A bakery simulation demonstrating labelle-tasks plugin hooks",
    .initial_scene = "main",
    .backend = .raylib,
    .ecs_backend = .zig_ecs,
    .window = .{
        .width = 1024,
        .height = 768,
        .title = "Bakery Game - Task Hooks Demo",
        .target_fps = 60,
    },
    .camera = .{
        .x = -160,
        .y = -20,
    },
    .resources = .{},
    .plugins = .{
        .{
            .name = "labelle-tasks",
            .path = "../../labelle-tasks",
            .bind = .{
                .{ .func = "bind", .arg = "Items", .components = "Storage,Worker,DanglingItem,Workstation" },
            },
        },
    },
}
